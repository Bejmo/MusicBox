<MainLayout>:
    orientation: "vertical"

    TextInput:
        id: link_input
        hint_text: "Introduce un enlace"
        size_hint_y: 0.1

    Label:
        id: feedback_label
        text: "Esperando acci√≥n..."
        size_hint_y: 0.2

    Spinner:
        id: spinner
        text: "Cargando..."
        values: []
        size_hint_y: 0.1
        opacity: 0  # Oculto por defecto

    Button:
        text: "Confirmar"
        size_hint_y: 0.1
        on_press: root.start_loading()

    Button:
        id: stop_button
        text: "Parar"
        size_hint_y: 0.1
        opacity: 0  # Oculto por defecto
        on_press: root.stop_loading()